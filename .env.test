# Test Environment Configuration for Playwright E2E Testing

# Flag to enable the mock auth endpoint
E2E_TESTING="true"

# JWT Secret for signing test tokens (MUST match production format)
JWT_SECRET="test-secret-for-e2e-testing-do-not-use-in-production"
NEXTAUTH_SECRET="test-secret-for-e2e-testing-do-not-use-in-production"

# Application URLs
NEXT_PUBLIC_BASE_URL="http://localhost:3001"
NEXT_PUBLIC_API_URL="http://localhost:3001"
NEXT_PUBLIC_WEB_URL="http://localhost:3001"
NEXTAUTH_URL="http://localhost:3001"

# Development settings for testing
NODE_ENV="development"
LOG_LEVEL="debug"

# Mock Google OAuth settings (not used by mock auth but needed for app startup)
GOOGLE_CLIENT_ID="mock-client-id"
GOOGLE_CLIENT_SECRET="mock-client-secret"
NEXT_PUBLIC_GOOGLE_CLIENT_ID="mock-client-id"

# Disable telemetry for tests
NEXT_TELEMETRY_DISABLED=1