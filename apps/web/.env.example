# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Authentication
NEXTAUTH_URL=https://staging.finito.mail  # or https://app.finito.mail for production
NEXTAUTH_SECRET=your-secret-key  # Generate with: openssl rand -base64 32

# Google OAuth (via Supabase)
# Configure in Supabase Dashboard > Authentication > Providers > Google

# Redis for Real-time Sync (optional)
REDIS_URL=redis://username:password@your-redis-host:6379

# Gmail Pub/Sub (optional for webhooks)
GMAIL_PUBSUB_TOPIC=projects/your-project/topics/gmail-push-notifications
PUBSUB_VERIFICATION_TOKEN=your-verification-token

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info  # debug, info, warn, error