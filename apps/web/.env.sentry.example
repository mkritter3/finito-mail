# Sentry Performance Monitoring Configuration
# Copy this file to .env.local and fill in your Sentry details

# Get your DSN from https://sentry.io/settings/[org]/projects/[project]/keys/
NEXT_PUBLIC_SENTRY_DSN=https://YOUR_DSN@sentry.io/PROJECT_ID
SENTRY_DSN=https://YOUR_DSN@sentry.io/PROJECT_ID

# Organization slug from Sentry
SENTRY_ORG=your-org-slug

# Project name from Sentry
SENTRY_PROJECT=finito-mail

# Generate auth token at https://sentry.io/settings/account/api/auth-tokens/
# Required scopes: project:releases, org:read
SENTRY_AUTH_TOKEN=your-auth-token

# Health check API key for production
HEALTH_CHECK_API_KEY=generate-a-secure-random-key

# Optional: Environment name
NEXT_PUBLIC_ENV=production

# Optional: Application version
NEXT_PUBLIC_APP_VERSION=1.0.0